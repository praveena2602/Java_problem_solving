import java.util.Scanner;
class Main{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        System.out.print("Enter radius of the circle:");
        double a=sc.nextDouble();
        
        double area=Math.PI*(Math.pow(a,2));
        System.out.printf("Area of the circle is %.2f ",area);
        System.out.println();
        double circum=2*Math.PI*a;
        System.out.printf("The circumference of the circle %.2f ",circum);
        System.out.println();
        double volume=(4.0/3.0)*Math.PI*Math.pow(a,3);
        System.out.printf("The volume of the circle is %.2f ",volume);
}
}
